{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://github.com/ForesightAndMetrics/OIMS/tree/main/BasicSchemas/version_2_1_0_0/OIMS_base.schema.json",
    "title": "OIMS Metadata Schema",
    "type": "object",
    "properties": {
      "OIMS": {
        "type": "object",
        "properties": {
          "\\": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Optional comment elements used especially for adding GTREE tags."
          },
          "OIMS_Header": {
            "type": "object",
            "properties": {
              "mapping_info": {
                "type": "object",
                "additionalProperties": true
              },
              "MetaDataSchema": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "OIMS_Content_Object": {
                      "type": "string"
                    },
                    "SchemaProperties": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "SchemaName": {
                            "type": "string"
                          },
                          "SchemaDescription": {
                            "type": "string"
                          },
                          "SchemaType": {
                            "type": "string"
                          },
                          "SchemaVersion": {
                            "type": "string"
                          },
                          "SchemaURL": {
                            "type": "string",
                            "format": "uri"
                          }
                        },
                        "required": [
                          "SchemaName",
                          "SchemaDescription",
                          "SchemaType",
                          "SchemaVersion",
                          "SchemaURL"
                        ],
                        "additionalProperties": false
                      }
                    }
                  },
                  "required": ["OIMS_Content_Object", "SchemaProperties"],
                  "additionalProperties": false
                },
                "minItems": 1
              },
              "FileDescriptors": {
                "type": "object",
                "additionalProperties": true
              }
            },
            "required": ["mapping_info", "MetaDataSchema", "FileDescriptors"],
            "additionalProperties": false
          },
          "OIMS_Content": {
            "type": "object",
            "minProperties": 1,
            "propertyNames": {
              "enum": [
                "Descriptive_Metadata_DataSet",
                "Descriptive_Metadata_DataFile",
                "Technical_Metadata_DataFile",
                "Technical_Metadata_Dataset",
                "Structural_Metadata_DataFile",
                "DataEntity",
                "MetadataMetadata",
                "ETL_Metadata"
              ]
            },
            "additionalProperties": {
              "type": "array",
              "items": {
                "type": "object",
                "additionalProperties": true
              }
            }
          }
        },
        "required": ["OIMS_Header", "OIMS_Content"],
        "additionalProperties": false
      }
    },
    "required": ["OIMS"],
    "additionalProperties": false
  }
  
